const maxRand = (max) => {
    return Math.round(Math.random() * max);
}

const getChar = () => {
    let ar = maxRand(charset.length - 1)
    return charset[ar][maxRand(charset[ar].length - 1)]
}

const shuffle = (array) => {
    for (let i = array.length - 1; i > 0; i--) {
      let j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
}

const getEm = (power, emOnly) => {
    let passAr = []
    if (!emOnly) {
        for (let i = 0; i < charset.length; i++) {
            let symbol = charset[i][maxRand(charset[i].length - 1)]
            power = power - symbol.length
            passAr.push(symbol)
        }
        while (power > 0) {
            let symbol = getChar()
            if (symbol.length <= power) {
                power = power - symbol.length
                passAr.push(symbol)
            }
        }
    }
    else {
        while (power > 0) {
            let symbol = charset[4][maxRand(charset[4].length - 1)]
            if (symbol.length <= power) {
                power = power - symbol.length
                passAr.push(symbol)
            }
        }
    }
    shuffle(passAr)
    console.log(passAr.join('').length)
    return passAr.join('')
}
